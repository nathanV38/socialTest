<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "OmniTest" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag ":defaults" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>

<body>


<div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">PGD</a>
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <li>
				<form class="navbar-form">
					<input type="text" class="input-small" placeholder="Email">
					<input type="password" class="input-small" placeholder="Password">
					<button class="btn btn-primary" type="submit">
						Connect
						<%= link_to "", "#" %>
					</button>

					<button class="btn btn-custom-spin" type="button">
						SocialConn
						<%= link_to "", "#" %>
					</button>
				</form>	
				
				<div class="inline">
					<%= form_tag "/auth/identity/callback", {:class => 'navbar-form'} do %>
					  <div class="field input-small">
						<!-- <%= label_tag :auth_key, "Email" %><br> -->
						<%= text_field_tag :auth_key %>
					  </div>
					  <div class="field input-small">
						<!-- <%= label_tag :password %><br> -->
						<%= password_field_tag :password %>
					  </div>
					  <div class="actions btn btn-primary"><%= submit_tag "Connect" %></div>
					<% end %>
				</div>
				
			</li>
          </ul>
        </div>
      </div>
    </div>
</div>

<div class="container">
<h1></br></h1>


	<div class="row">
	<div class="span9">
		<div class="input-prepend input-append">
			<div class="btn-group">
			<button class="btn dropdown-toggle" data-toggle="dropdown">
			Critères
			<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
			<li>Secteur</li>
			<li>Modeuses</li>
			<li>Type de document</li>
			</ul>
			</div>
			<input class="span4" id="appendedInputButtons" type="text" placeholder="Rechercher doc: par ex, Python">
			<button class="btn" type="button">Rechercher</button>
			<button class="btn" type="button">Options</button>
			</div>
			</div
			<div class="span3">
		<button class="btn btn-large btn-custom-lighten span3" type="button">+ AJOUTER DOC ICI</button>
	</div
</div>












	<div id="container"> 
	
	
		<h1></h1>
		
		<div id="user_nav"> 
			
		
			<% if current_user %>
				
				SignedIn as <%= current_user.name %>!
				<%= link_to "signOut", signout_path %>
			<% else %>
				
				<%= link_to "signin with Tw", "/auth/twitter" %>
				<%= link_to "signin with Fcbk", "/auth/facebook" %>
				<%= link_to "signin with Googl", "/auth/google_oauth2" %>
				<p>
					<%= link_to "Create Account", new_identity_path %>
				</p>
				
				</br>
				<h1>check</h1>
				<% if current_page?(url_for(:controller => 'identities', :action => 'new'))	 %>
					<% else %>  
						<%= form_tag "/auth/identity/callback" do %>
						  <div class="field">
							<%= label_tag :auth_key, "Email" %><br>
							<%= text_field_tag :auth_key %>
						  </div>
						  <div class="field">
							<%= label_tag :password %><br>
							<%= password_field_tag :password %>
						  </div>
						  <div class="actions"><%= submit_tag "Login" %></div>
					<% end %>
				<% end %>
				
			<% end %>
		
		
		</div>
			
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
	<%= yield %>
	</div>
</div>
</body>
</html>
